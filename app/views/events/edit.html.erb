<h1>Update event</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :content %>
        <%= f.text_area :content , :rows=> 6 %>

        <%= f.label :start_time %>
        <%= f.text_field :start_time ,:id => 'datepicker' %>

        <%= f.label :duration %>
        <%= f.text_field :duration %>

        <%= f.label :poster, 'Poster image' %>
        <%= f.file_field :poster %>



        <%= f.submit 'Save changes', :class => 'btn btn-large btn-primary' %>
    <% end %>

  </div>
</div>
