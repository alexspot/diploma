<h1>User List</h1>
<div class="well">
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Username</th>
				<th style="width: 36px;"></th>
			</tr>
		</thead>
		<tbody>
			<% @user.each do |user| %>
			<tr>
				<td><%= user.id %> </td>
				<td><%= link_to user.name, user %> </td>
				<td><%= link_to user.name, user %> </td>
				<td><%= link_to user.name, user %> </td>
					<% if current_user.admin? %> 
						<td><%= link_to '<i class="icon-remove"></i>'.html_safe, user, 
						method: :delete, confirm: "SURE?" %></td>
					<% end %>
			<% end %>
			</tr>
		
		</tbody>
	</table>
</div>
