<div class="row">
  <div class="span5">
<% provide(:title, @user.name) %>

	
<p class="text-left"><%= @user.name %></p>
<p class="text-left"><%= @user.email %></p><i class="icon-envelope"></i>
<p class="text-left"><%= @date %></p>
<p class="text-left">Last time profile was updated at &nbsp<%= @user.updated_at %></p>

	<div class="span8">
		<% if @user.microposts.any?%>
		<h3>User have (<%= @user.microposts.count%>)
			<% if (@user.microposts.count <= 1 )%>
				Post
			<%else%>
				<%="Post".pluralize %>
			<%end%>
			
			</h3>
			<ol class="microposts">
				<%= render @micropost %>
			</ol>
		<%end%>
		
			<% if @user.orders.any?%>
		<h3>User have (<%= @user.orders.count%>)
			<% if (@user.orders.count <= 1 )%>
				Order
			<%else%>
				<%="Order".pluralize %>
			<% end %>
			<% end %>
        </h3>
			

			
		
	<%= link_to 'Edit my profile', edit_user_path(current_user) %>


    </div>
</div>
    </div>
